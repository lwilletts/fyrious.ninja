#!/bin/sh
#
# wildefyr - 2016 (c) wtfpl
# wrapper for twitch.tv

usage() {
    printf '%s\n' "Usage: $(basename $0) [channelname] <quality>"
    exit 1
}

test -z "$1" && usage || channelName="$1"
test -z "$2" && quality="source" || quality="$2"

livestreamer http://twitch.tv/"$channelName" "$quality" -Q &
